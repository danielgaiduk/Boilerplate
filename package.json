{
	"name": "boilerplate",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "vite build",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"dev": "vite dev",
		"format": "prettier --plugin='prettier-plugin-svelte' --ignore-path .gitignore --write .",
		"lint:format": "prettier --plugin='prettier-plugin-svelte' --ignore-path .gitignore --check .",
		"lint:eslint": "eslint --ignore-path .gitignore .",
		"lint": "npm run lint:format && npm run lint:eslint",
		"preview": "vite preview",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test": "npm run test:integration && npm run test:unit"
	},
	"devDependencies": {
		"@playwright/test": "^1.38.1",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.25.1",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.6",
		"@tailwindcss/typography": "^0.5.10",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"autoprefixer": "^10.4.16",
		"dayjs": "^1.11.10",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.34.0",
		"fast-xml-parser": "^4.3.2",
		"pocketbase": "^0.18.0",
		"postcss": "^8.4.31",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"super-sitemap": "^0.13.8",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"sveltekit-i18n": "^2.4.2",
		"sveltekit-superforms": "^1.8.0",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.11",
		"vitest": "^0.34.6",
		"zod": "^3.22.4"
	},
	"type": "module",
	"dependencies": {
		"@sentry/sveltekit": "^7.73.0"
	}
}
